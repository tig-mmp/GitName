{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "rootDirs": ["src/", "test/"],
    "outDir": "./dist",
    "strict": true,
    "types": ["node", "jest", "jsdom"],
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
